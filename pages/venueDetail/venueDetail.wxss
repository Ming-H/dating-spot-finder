.venue-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.venue-website {
  color: #5DADE2;
  text-decoration: underline;
}

.venue-action {
  margin-left: 20rpx;
}

.action-btn {
  min-width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background-color: #f2f2f2;
  color: #666;
  border-radius: 30rpx;
}

/* 距离信息 */
.distance-info {
  margin-top: 20rpx;
}

.distance-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.distance-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.distance-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.you-icon {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%235DADE2"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

.partner-icon {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23F1948A"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

.distance-label {
  width: 200rpx;
  font-size: 28rpx;
  color: #333;
}

.distance-value {
  flex: 1;
  font-size: 28rpx;
  color: #FF6B81;
  font-weight: 500;
}

.duration-value {
  font-size: 26rpx;
  color: #999;
}

/* 地图区域 */
.map-section {
  margin-top: 20rpx;
}

.map-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-map {
  width: 100%;
  height: 450rpx;
  margin-bottom: 20rpx;
}

.map-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

/* 底部操作区 */
.bottom-actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.share-btn, .nav-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.share-btn {
  background-color: #fff;
  border: 1rpx solid #ddd;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.share-icon {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23666"><path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/></svg>');
