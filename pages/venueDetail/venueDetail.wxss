  background-position: left center;
  background-size: cover;
  z-index: -1;
}

.rating-value {
  font-size: 26rpx;
  color: #FF6B81;
  margin-left: 120rpx;
  font-weight: bold;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.venue-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.venue-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

